class Solution{
      static bool sortr(vector<int>&a,vector<int>&b){
       return a[1]<b[1];
   }
public:
    int max_non_overlapping( vector< vector<int> >& ranges )
    {
        // code here
         sort(ranges.begin(),ranges.end(),sortr);
       int count=0;
       int next=0;
       int end=-1;
       for(auto &it:ranges){
           if(end<=it[0]){
               count++;
               end=it[1];
           }
       }
       return count;
   }
    
};

